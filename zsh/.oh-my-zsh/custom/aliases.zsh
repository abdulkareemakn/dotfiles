alias zshrc="micro ~/.zshrc"

# File System Aliases
alias ls="exa -lh --group-directories-first"
alias la="exa -Alh --group-directories-first"

alias cat="bat"

alias ..="cd .."
alias ...="cd ../.."

alias mkdir="mkdir -pv"

# pacman aliases
alias upgrade="sudo pacman -Syu"
alias install="sudo pacman -S"
alias search="yay -Ss"

 
